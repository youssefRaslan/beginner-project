@model IEnumerable<InventoryApi.Data.Product>

<h2>قائمة المنتجات</h2>

<table class="table">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الوصف</th>
            <th>السعر</th>
            <th>الكمية</th>
            <th>الصورة</th>
            <th>تاريخ الإضافة</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td><img src="@product.ImageUrl" alt="Image" width="50" /></td>
                <td>@product.CreatedAt.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
